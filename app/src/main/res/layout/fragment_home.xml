<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_main" />

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/roll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:rollviewpager_play_delay="3000" />

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gray_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ring" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/horizontal_small"
                android:gravity="center_vertical"
                android:text="你有一条新消息" />
        </LinearLayout>

    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:drawablePadding="5dp"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_newss"
                android:gravity="center"
                android:text="资讯" />
<View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_2"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_metting"
                android:gravity="center"
                android:text="展会会议" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="0dp"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_zb"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="植保" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="0dp"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/icon_set"
                android:gravity="center"
                android:text="技术" />

        </LinearLayout>
        <View style="@style/line_horizontal_gray4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_5"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:drawableTop="@drawable/icon_mt"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="名特新优" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_6"
                style="@style/textview_14_with_padding"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:drawableTop="@drawable/icon_qxjc"
                android:gravity="center"
                android:text="器材机械" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_7"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_mjjs"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="名家说苗" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_8"
                style="@style/textview_14_with_padding"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_people"
                android:gravity="center"
                android:text="大苗商" />

        </LinearLayout>
        <View style="@style/line_horizontal_gray4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_9"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:drawableTop="@drawable/icon_money"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="佣金" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_10"
                android:layout_width="0dp"
                style="@style/textview_14_with_padding"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/icon_share"
                android:gravity="center"
                android:text="分享" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_11"
                android:layout_width="0dp"
                style="@style/textview_14_with_padding"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_detail"
                android:gravity="center"
                android:text="详细说明" />
            <View style="@style/line_vertrial"/>
            <TextView
                android:id="@+id/tv_12"
                android:layout_width="0dp"
                style="@style/textview_14_with_padding"
                android:drawablePadding="5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_mzsm"
                android:gravity="center"
                android:text="免责声明" />

        </LinearLayout>
    </LinearLayout>
    <View style="@style/line_horizontal_gray4_bold"
        android:layout_height="15dp"/>
</LinearLayout>