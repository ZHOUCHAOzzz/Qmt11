<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
<include layout="@layout/title_sub"/>
<View style="@style/line_horizontal_gray4_bold"/>
    <LinearLayout
        style="@style/LHW"
        android:paddingLeft="30dp"
        android:paddingRight="25dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_tel" />

        <EditText
            android:id="@+id/et_tel"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:inputType="number" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_delete_login" />

        <View
            style="@style/line_vertrial"
            android:layout_marginLeft="@dimen/horizontal_small"
            android:layout_marginRight="@dimen/horizontal_small" />

        <TextView
            android:id="@+id/tv_getcode"
            style="@style/textview_14"
            android:text="获取验证码"
            android:textColor="@color/colorAccent" />

        <View
            style="@style/line_vertrial"
            android:layout_marginLeft="@dimen/horizontal_small"
            android:layout_marginRight="@dimen/horizontal_small" />
    </LinearLayout>

    <View style="@style/line_horizontal_gray4" />

    <LinearLayout
        style="@style/LHW"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_pwd" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:hint="请设置密码（6-16位字符）" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_login_visiable" />
    </LinearLayout>

    <View style="@style/line_horizontal_gray4" />

    <LinearLayout
        style="@style/LHW"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_yzm" />

        <EditText
            android:id="@+id/et_code"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:hint="请输入6位验证码" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dh" />
    </LinearLayout>

    <View style="@style/line_horizontal_gray4" />

    <TextView
        android:id="@+id/tv_submit"
        style="@style/BTN_PRIMARY_COLOR"
        android:layout_marginTop="20dp"
        android:text="找回密码" />
</LinearLayout>